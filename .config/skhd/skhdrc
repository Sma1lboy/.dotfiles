# Changing window focus
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# For home focus between external display left and right
alt - s : yabai -m display --focus west
alt - d : yabai -m display --focus east

# Modifying the Layout
alt - r : yabai -m space --rotate 270
shift + alt - y : yabai -m space --mirror y-axis
shift + alt - x : yabai -m space --mirror x-axis
alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2


# Modifying Windows Size
shift + alt - m : yabai -m window --toggle zoom-fullscreen
shift + alt - e : yabai -m space --balance
# resize window
alt - 0x18 : yabai -m window --resize right:25:0; \
            yabai -m window --resize left:-25:0; \
            yabai -m window --resize top:0:-25; \
            yabai -m window --resize bottom:0:25

alt - 0x1B : yabai -m window --resize right:-25:0; \
            yabai -m window --resize left:25:0; \
            yabai -m window --resize top:0:25; \
            yabai -m window --resize bottom:0:-25


ctrl + alt + shift - h: yabai -m window --resize left:-50:0

ctrl + alt + shift - l: yabai -m window --resize right:50:0

# Moving Windows Around
shift + alt - j : yabai -m window --warp south
shift + alt - k : yabai -m window --warp north
shift + alt - h : yabai -m window --warp west
shift + alt - l : yabai -m window --warp east

# Move window and split
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# Move windows to display left and right
shift + alt - s : yabai -m window --display west; yabai -m display --focus west
shift + alt - d : yabai -m window --display east; yabai -m display --focus east

# Move window to the previous or next space
shift + alt - p : yabai -m window --space prev
shift + alt - n : yabai -m window --space next

# Move window to space
shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4
shift + alt - 5 : yabai -m window --space 5
shift + alt - 6 : yabai -m window --space 6
shift + alt - 7 : yabai -m window --space 7

# Start/stop yabai
ctrl + alt - e : yabai --start-service
ctrl + alt - q : yabai --stop-service

